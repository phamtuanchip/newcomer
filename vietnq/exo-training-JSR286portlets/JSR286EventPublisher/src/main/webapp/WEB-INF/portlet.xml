<?xml version="1.0" encoding="UTF-8"?>
<portlet-app version="1.0" xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">
 
<portlet>
    <portlet-name>Jsr286EventPublisherPortlet</portlet-name>
    <portlet-class>org.exoplatform.social.JSR286EventPublisher</portlet-class>
    <init-param>
    <description>view jsp</description>
    <name>jspView</name>
    <value>/view.jsp</value>
    </init-param>
    <supports>
       	<mime-type>text/html</mime-type>
       	<portlet-mode>VIEW</portlet-mode>
    </supports>
    <portlet-info>
        <title>Jsr286 Event Publisher Portlet</title>
        <short-title>Jsr286EventPublisherPortlet</short-title>
    </portlet-info>
 
    <supported-publishing-event>
        <qname xmlns:x="http://quocviet.net/events">x:info</qname>
    </supported-publishing-event>
</portlet>

<event-definition>
    <qname xmlns:x="http://quocviet.net/events">x:info</qname>
    <value-type>java.lang.String</value-type>
</event-definition>

</portlet-app>